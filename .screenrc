escape ^zz

#many lines
defscrollback       100000

termcapinfo xterm hs@ti@:te@

# Status bar
#hardstatus alwayslastline "%{=b}%{kr} %{kg}%w %=%{ky}%c %D, %d-%M "
#hardstatus alwayslastline "%-w%{= RW}%50>*%n %t%{-}%+w%<"
hardstatus alwayslastline "%{= kY}%-w%{= Rw}%50>*%n %t%{-}%+w%<"

# Turn off annoyment
nethack off
startup_message off
defflow off

# stand-out (i.e. highlighting) color
sorendition =s rk

#unbind these
bind ^\
bind f
bind ^f

# switch to next region
bind o focus

# go to "copy" mode
bind ^x copy
# emacs style bindings in "copy" mode
# ^a, ^e, ^p, ^n, ^f, ^b, ^s and ^r works as in emacs
# ^u/^d is halfpage up/down
markkeys  h=^B:l=^F:$=^E

screen -t erl 0 erl -sname erl
screen -t bash 1
screen -t emacs -T xterm-256color 2 emacs -nw
