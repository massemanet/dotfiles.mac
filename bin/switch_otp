#!/bin/bash

BASE=/usr/local/otp
REL=$1

usage() {
    echo "$0 <release>"
    echo
    echo -n "current:"
    ls -dl $BASE/current | cut -f2 -d">"
    echo
    echo "available:"
    ( cd $BASE ; ls -1d R* )
    exit
}
[ -z "$REL" ] && usage
 [ -d $BASE ] || ( echo "$BASE not found." ; exit )
[ -d $BASE/$REL ] ||  ( echo "$BASE/$REL not found." ; exit )
cd $BASE
sudo rm current
sudo ln -s $REL current
