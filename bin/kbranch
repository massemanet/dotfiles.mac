#!/bin/bash

n=1
branch=trunk
while [ "$1" != "" ]; do
    case "$1" in
	"--branch") 
	    branch=$2 ; shift;;
	*)
	    ARGS[$n]="$1"
            n=$(($n+1));;
    esac
    shift
done

HD=$HOME/svn/kred

if [ ! -d $HD/$branch ]; then
    echo "no such branch"
    exit
fi

echo "branch is $branch"
cd $HD/$branch

set -- "${ARGS[@]}"
