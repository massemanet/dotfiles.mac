# -*- mode: shell-script -*-
#!/bin/bash

function usage () {
    echo "$1"
    exit
}

# get homebrew
if test ! $(which brew); then
    echo "Installing homebrew..."
    ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

# Install stuff
brew update
brew install \
     aspell bash bash-completion cask coreutils curl emacs findutils \
     git grep htop jq make mosh pstree shellcheck tmux wget
brew cask install \
     chromium docker emacs firefox google-chrome slack spotify tunnelblick xquartz zoomus

# link some nice stuff
ULB=/usr/local/bin
[ -x $ULB/find ] || ln -s $(brew --prefix findutils)/bin/gfind $ULB/find
[ -x $ULB/xargs ] || ln -s $(brew --prefix findutils)/bin/gxargs $ULB/xargs
[ -x $ULB/grep ] || ln -s $(brew --prefix grep)/bin/ggrep $ULB/grep

if [ -f ~/.ssh/id_rsa ]; then
    echo "found keys"
else
    ssh-keygen
    echo "upload public key to github"
    exit 1
fi

# get my stuff
if [ -d ~/.git ]; then
    echo "found ~/.git"
else
    (cd /tmp && git clone git@github.com:massemanet/dotfiles.mac.git)
    mv /tmp/dotfiles.mac/.git ~
    git reset --hard
fi

# install emacs packages
(cd ~/.emacs.d && cask install)
