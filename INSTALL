# -*- mode: shell-script -*-
#!/bin/bash

function usage () {
    echo "$1"
    exit
}

# get homebrew
if test ! $(which brew); then
    echo "Installing homebrew..."
    ruby -e "$(curl -fsSL https://raw.github.com/Homebrew/homebrew/go/install)"
fi

# Install stuff
brew update
brew tap homebrew/dupes

brew install \
     aspell autoconf automake bash bash-completion cask coreutils curl \
     elixir emacs erlang findutils grep git go htop jq rebar3 tmux wget
brew cask install \
     android-file-transfer chromium firefox gpgtools slack virtualbox \
     docker iterm2 spotify tunnelblick xquartz

# link some nice stuff
ULB=/usr/local/bin
[ -x $ULB/find ] || ln -s $(brew --prefix findutils)/bin/gfind $ULB/find
[ -x $ULB/xargs ] || ln -s $(brew --prefix findutils)/bin/gxargs $ULB/xargs
[ -x $ULB/grep ] || ln -s $(brew --prefix grep)/bin/ggrep $ULB/grep

# get my stuff
(cd /tmp && git clone git@github.com:massemanet/dotfiles.mac.git)
mv /tmp/dotfiles.mac/.git ~
git reset --hard
(cd ~/.emacs.d && cask install)

echo "add coreutils to PATH: /usr/local/opt/coreutils/libexec/gnubin"
