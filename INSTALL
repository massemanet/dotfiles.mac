# -*- mode: shell-script -*-
#!/bin/bash

function usage () {
    echo "$1"
    exit
}

# get homebrew
if test ! "$(which brew)"; then
    echo "Installing homebrew..."
    BREW="https://raw.githubusercontent.com/Homebrew/install/master/install"
    ruby -e "$(curl -fsSL "$BREW")"
fi

# Install stuff
brew update
brew install --with-default-names \
     grep
brew install \
     aspell bash bash-completion cask coreutils curl emacs findutils \
     gawk git gnu-sed gzip htop jq make mosh pstree shellcheck tmux wget
brew cask install \
     chromium docker emacs firefox google-chrome slack spotify \
     tunnelblick xquartz zoomus

if [ -f ~/.ssh/id_rsa ]; then
    echo "found keys"
else
    ssh-keygen
    echo "upload public key to github"
    exit 1
fi

# get my stuff
if [ -d ~/.git ]; then
    echo "found ~/.git"
else
    (cd /tmp && git clone git@github.com:massemanet/dotfiles.mac.git)
    mv /tmp/dotfiles.mac/.git ~
    git reset --hard
fi

# install emacs packages
(cd ~/.emacs.d && cask install)
